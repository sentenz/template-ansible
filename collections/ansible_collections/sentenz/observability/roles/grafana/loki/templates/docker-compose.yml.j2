---
services:
  {{ loki_name }}:
    image: {{ loki_image }}
    container_name: {{ loki_name }}
    user: {{ ownership_owner }}
    volumes:
      - {{ loki_path }}:/etc/loki
      - loki_data:/loki
    command: 
      - --config.file=/etc/loki/config.yml
    ports:
      - "{{ loki_port }}:3100"
    restart: always
    networks:
      - observability
    deploy:
      mode: global

networks:
  observability:
    name: observability
    driver: bridge

volumes:
  loki_data: {}
