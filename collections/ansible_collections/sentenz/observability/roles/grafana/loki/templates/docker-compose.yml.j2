---
services:
  {{ grafana_loki_name }}:
    image: {{ grafana_loki_image }}
    container_name: {{ grafana_loki_name }}
    user: {{ grafana_ownership_owner }}
    volumes:
      - "{{ grafana_loki_path }}:/etc/loki:ro"
      - "{{ grafana_loki_volume }}:/data/loki"
    command: 
      - --config.file=/etc/loki/config.yml
    ports:
      - "{{ grafana_loki_port }}:3100"
    restart: always
    networks:
{% for network in grafana_networks %}
      - "{{ network }}"
{% endfor %}
    deploy:
      mode: global
    security_opt:
      - no-new-privileges:true

networks:
{% for network in grafana_networks %}
  {{ network }}:
    name: "{{ network }}"
    driver: bridge
{% endfor %}

volumes:
  "{{ grafana_loki_volume }}": {}
